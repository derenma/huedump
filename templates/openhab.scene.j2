{% for idx, l in lights|dictsort -%}
{%- set ref = "hue" + idx -%}
{% if l.state.on -%}
{% if l.state.colormode -%}
sendCommand({{ ref }}, new HSBType(new DecimalType({{ (l.state.hue/256)|round(1) }}), new PercentType({{ ((l.state.sat/256)*100)|round }}), new PercentType({{ ((l.state.sat/256)*100)|round }})).toString())
{%- else -%}
sendCommand({{ ref }}, {{ ((l.state.bri/256)*100)|round(1) }})
{%- endif %}
{%  else %}
sendCommand({{ ref }}, OFF)
{%- endif %}
{%- endfor %}